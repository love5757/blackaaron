<?xml version="1.0" encoding="UTF-8"?>
<configuration>


  <property name="LOG_LEVEL" value="DEBUG" />
  <property name="LOG_DIR" value="/service/logs" />

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <param name="Target" value="System.out" />
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5p: %c - %m%n
      </pattern>
    </encoder>
  </appender>

  <appender name="dailyRolling"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
    <prudent>true</prudent>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/toc_gateway-%d{yyyyMMdd}.log</fileNamePattern>
      <maxHistory>720</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5p: %c - %m%n</pattern>
    </encoder>
  </appender>

  <appender name="accessDailyRolling"  class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>INFO</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <prudent>true</prudent>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/access/toc_gateway_access-%d{yyyyMMdd}.log</fileNamePattern>
      <maxHistory>720</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5p: %c - %m%n</pattern>
    </encoder>
  </appender>

  <appender name="errorDailyRolling"  class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <prudent>true</prudent>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/error/toc_gateway_error-%d{yyyyMMdd}.log</fileNamePattern>
      <maxHistory>720</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5p: %c - %m%n</pattern>
    </encoder>
  </appender>

  <appender name="messageLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <prudent>true</prudent>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/message/toc_gateway_message-%d{yyyyMMdd}.log</fileNamePattern>
      <maxHistory>720</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5p: %c - %m%n</pattern>
    </encoder>
  </appender>

  <logger name="EarthQuake" level="${LOG_LEVEL}">
    <appender-ref ref="dailyRolling" />
    <appender-ref ref="accessDailyRolling" />
    <appender-ref ref="errorDailyRolling" />
  </logger>

  <root level="DEBUG">
    <appender-ref ref="console" />
  </root>

</configuration>